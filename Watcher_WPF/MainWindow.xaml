<Window x:Class="Watcher_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Watcher_WPF"
        mc:Ignorable="d"
        Title="Watcher" Height="450" Width="800" MinWidth="500" MinHeight="300">
    <Grid>
        <Label Content="path：" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_path" Height="23" Margin="58,12,250,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Text="C:\" KeyDown="TextBox_path_KeyDown"/>
        <Button x:Name="button_doit" Content="start" HorizontalAlignment="Right" Margin="0,12,170,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.914,-0.702" Height="23" Click="Button_doit_Click"/>
        <Button x:Name="button_clear" Content="clear" HorizontalAlignment="Right" Margin="0,12,90,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.914,-0.702" Height="23" Click="Button_clear_Click"/>
        <Button x:Name="button_save" Content="save" HorizontalAlignment="Right" Margin="0,12,10,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.914,-0.702" Height="23" Click="Button_save_Click"/>
        <RichTextBox x:Name="richTextBox_main" Margin="0,40,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Background="Black" Foreground="White" TextChanged="RichTextBox_main_TextChanged" FontFamily="Consolas">
            <FlowDocument LineHeight="1"/>
        </RichTextBox>

    </Grid>
</Window>
